// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  USER
  AMBASSADOR
}

enum PaymentStatus {
  PENDING
  PAID
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  accounts  Account[]
  sessions  Session[]
  ambassador Ambassador?
  payments  Payment[]
}

model Ambassador {
  id            String   @id @default(cuid())
  userId        String   @unique
  referralCode  String   @unique
  totalEarnings Float    @default(0)
  createdAt     DateTime @default(now())
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  referralClicks ReferralClick[]
  payments      Payment[]
}

model ReferralClick {
  id           String   @id @default(cuid())
  referralCode String
  ipAddress    String
  createdAt    DateTime @default(now())
  ambassador   Ambassador @relation(fields: [referralCode], references: [referralCode], onDelete: Cascade)
}

model Payment {
  id                   String        @id @default(cuid())
  userId               String
  amount               Float         @default(119.99)
  status               PaymentStatus @default(PENDING)
  referralCode         String?
  ambassadorCommission Float         @default(35)
  createdAt            DateTime      @default(now())
  user                 User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  ambassador           Ambassador?   @relation(fields: [referralCode], references: [referralCode], onDelete: SetNull)
}
